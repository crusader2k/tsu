{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "outDir": "output",
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": false,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es2016"
    ],
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "./source/**/*"
  ]
}
